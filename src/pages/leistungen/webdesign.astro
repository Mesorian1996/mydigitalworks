---
import Base from "@/layouts/Base.astro";
import CustomButton from "@/components/CustomButton.astro";
import WhatWeDoCards from "@/components/sections/WhatWeDoCards.astro";
import SplitHookSection from "@/components/sections/SplitHookSection.astro";
import TechAccordion from "@/components/sections/TechAccordion.astro";
import webdesignHero from "@/assets/images/Leistungen/webdesign_unterseite.webp";

const title = "Webdesign";

const miniProjects = [
  {
    title: "Limani Fliesenleger",
    story:
      "Familienbetrieb, der Vertrauen und handwerkliche Qualität zeigen wollte. Wir haben eine klare Leistungsstruktur aufgebaut und lokale Sichtbarkeit gestärkt.",
    result:
      "Mehr Anfragen aus der Region durch klare CTAs und optimiertes Google-Unternehmensprofil.",
    image: "/images/Limani_Fliesenleger_1.png",
    url: "https://limani-fliesenleger.de",
  },
  {
    title: "Circle of Life BJJ",
    story:
      "Eigene Academy, die Probetrainings füllen wollte. Fokus auf einfache Kontaktwege und authentische Darstellung des Trainers.",
    result:
      "Kontinuierliche Probetrainings-Anfragen dank klarer CTA und mobile-first Performance.",
    image: "/images/Circleoflife_bjj_1.png",
    url: "https://circleoflife-bjj.de",
  },
];
---

<Base className="bg-white">
<section class="bg-gradient-to-b from-white via-[#f9f2e9] to-white py-16 md:py-24">
  <div class="container grid gap-12 lg:grid-cols-2 lg:items-center">
    <div
      class="relative order-2 overflow-hidden rounded-3xl border border-[#d7c5aa]/70 bg-white shadow-[0_28px_120px_-70px_rgba(0,0,0,0.35)] lg:order-1 lg:translate-y-10"
      data-aos="fade-right">
      <img
        src={webdesignHero.src}
        alt="Webdesign Showcase"
        class="h-full w-full object-cover"
        loading="lazy"
        decoding="async"
      />
    </div>

    <div class="order-1 space-y-6 text-[#0A1A2F] lg:order-2" data-aos="fade-left" data-aos-delay="120">
      <div class="flex items-center gap-3">
        <p class="text-sm uppercase tracking-[0.28em] text-[#476783]">Leistungen</p>
        <span class="inline-flex items-center justify-center rounded-full bg-[#476783]/10 p-2 text-[#476783]">
          <img src="/images/logo.webp" alt="MY Digital Works Logo" class="h-8 w-auto" loading="lazy" decoding="async" />
        </span>
      </div>
      <h1 class="text-h1-sm font-bold leading-tight md:text-h1">{title}</h1>
      <p class="text-base text-[#1f2a35]/80 md:text-lg">
        Websites, die Vertrauen schaffen, schnell laden und Anfragen aus Besuchern machen.
        Klare Struktur, starke Story und Technik ohne Ballast.
      </p>
      <div class="flex flex-wrap gap-3">
        <CustomButton
          label="Kostenloses Gespräch buchen"
          url="/#contact"
          hoverEffect="creative-fill"
          class="btn-primary bg-[#476783] border-[#476783] text-white hover:bg-[#c9baa8] hover:border-[#c9baa8] hover:text-[#0a1a2f] effect-color-dark"
        />
        <CustomButton
          variant="text"
          hoverEffect="underline-slide"
          label="Case ansehen"
          url="/#portfolio"
          class="text-[#476783] hover:text-[#f7b97d] px-0 py-0"
        />
      </div>
    </div>
  </div>
</section>

<WhatWeDoCards />

<SplitHookSection />

<TechAccordion />

  <section class="bg-gradient-to-b from-white via-[#f1ebe2] to-white py-16 md:py-24">
    <div class="container space-y-10">
      <div class="space-y-3 text-center text-[#0a1a2f]" data-aos="fade-up">
        <p class="text-sm uppercase tracking-[0.28em] text-[#476783]">Ausgewählte Arbeiten</p>
        <h2 class="text-h2-sm font-bold leading-tight md:text-h2">
          Beispiele, die Vertrauen schaffen.
        </h2>
      </div>

      <div class="grid gap-8 lg:grid-cols-2">
        {miniProjects.map((project, idx) => (
          <article
            class="group flex h-full flex-col overflow-hidden rounded-3xl border border-[#d7c5aa]/70 bg-white shadow-[0_24px_90px_-60px_rgba(0,0,0,0.25)] transition duration-300 hover:-translate-y-1 hover:shadow-[0_32px_110px_-70px_rgba(71,103,131,0.28)]"
            data-aos="fade-up"
            data-aos-delay={idx * 100}>
            <div class="overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="aspect-[4/3] w-full object-cover transition duration-500 group-hover:scale-[1.02]"
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="flex flex-1 flex-col gap-4 p-8">
              <div class="space-y-2">
                <h3 class="text-2xl font-semibold text-[#0A1A2F]">{project.title}</h3>
                <p class="text-sm text-[#1f2a35]/80">{project.story}</p>
              </div>
              <p class="text-sm font-semibold text-[#0A1A2F]">{project.result}</p>
              <div class="mt-auto">
                <CustomButton
                  label="Case ansehen"
                  url={project.url}
                  hoverEffect="creative-fill"
                  class="btn-outline border-[#476783] text-[#476783] hover:bg-[#476783] hover:text-white focus-visible:ring-4 focus-visible:ring-[#f7b97d]/40"
                />
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>

